{
  "name": "solar-frontend",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "watch": "ng build --watch --configuration development",
    "clean": "rimraf dist",
    "mkdirp": "mkdirp reports",
    "build": "ng build --configuration production",
    "build-prod-ci-high-memory": "node --max_old_space_size=2000 ./node_modules/@angular/cli/bin/ng build --configuration production --progress=false",
    "test": "ng test --watch=false",
    "test-ci": "ng test --progress=false --watch=false",
    "stylelint": "stylelint src/**/*.scss --custom-formatter node_modules/stylelint-formatter-html > reports/stylelint-results.html",
    "lint": "npm run stylelint && ng lint --fix"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.3.5",
    "@angular/cdk": "^16.2.1",
    "@angular/common": "^17.3.5",
    "@angular/compiler": "^17.3.5",
    "@angular/core": "^17.3.5",
    "@angular/forms": "^17.3.5",
    "@angular/material": "^16.2.1",
    "@angular/platform-browser": "^17.3.5",
    "@angular/platform-browser-dynamic": "^17.3.5",
    "@angular/router": "^17.3.5",
    "chart.js": "^4.4.0",
    "chartjs-plugin-annotation": "^3.0.1",
    "ng2-charts": "^5.0.3",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.3.5",
    "@angular-eslint/builder": "^17.3.0",
    "@angular-eslint/eslint-plugin": "^17.3.0",
    "@angular-eslint/eslint-plugin-template": "^17.3.0",
    "@angular-eslint/schematics": "^17.3.0",
    "@angular-eslint/template-parser": "^17.3.0",
    "@angular/cli": "~17.3.5",
    "@angular/compiler-cli": "^17.3.5",
    "@types/jasmine": "~4.3.0",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "eslint": "^8.57.0",
    "eslint-plugin-rxjs": "^5.0.3",
    "jasmine-core": "~4.6.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "stylelint": "^15.10.2",
    "stylelint-config-sass-guidelines": "^10.0.0",
    "stylelint-formatter-html": "^1.0.1",
    "stylelint-no-unsupported-browser-features": "^7.0.0",
