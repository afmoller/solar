{
  "extends": "stylelint-config-sass-guidelines",
  "plugins": [
    "stylelint-no-unsupported-browser-features",
    "stylelint-use-nesting"
  ],
  "rules": {
    "plugin/no-unsupported-browser-features": [
      true,
      {
        "browsers": ["defaults",
                      "not op_mini all",
                      "not and_uc 15.5",
                      "not and_qq 14.9",
                      "not kaios 2.5"],
        "severity": "warning"
      }
    ],
    "csstools/use-nesting": [
      true,
      {
        "except": ["&:hover"]
      }
    ]
  }
}
